<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">注文履歴詳細</h2>
    <div class="col-md-8"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h4>注文情報</h4>
      <table class="order-date">
        <tbody>
          <tr>
            <td class="order-date-title">注文日</td>
            <td class="order-date-text"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td class="order-date-title">配送先</td>
            <td class="order-date-text">
              <%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td class="order-date-title">支払方法</td>
            <td class="order-date-text"><%= @order.payment_method %></td>
          </tr>
           <!--<tr>
           <td class="order-date-title">ステータス</td>
           <td class="order-date-text"><%#= @order.status %></td>
          </tr>-->
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <h4>請求情報</h4>
      <div>
        <table class="payment-date">
          <tbody>
            <tr>
              <td class="payment-date-title">商品合計</td>
              <td class="payment-date-text"><%= @sum %></td>
            </tr>
            <tr>
              <td class="payment-date-title">配送先</td>
              <td class="payment-date-text"><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td class="payment-date-title">ご請求額</td>
              <td class="payment-date-text"><%= @order.total_payment %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



<div class="item-date">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <h4>注文内容</h4>
        <table class="order-item-date">
          <thead>
            <tr>
              <th class="item-date-title-item">商品</th>
              <th class="item-date-title-price">単価(税込)</th>
              <th class="item-date-title-amount">個数</th>
              <th class="item-date-title-subtotal">小計</th>
            </tr>
          </thead>

          <tbody>
            <% @order.order_details.each do |order_detail| %>
              <tr>
                <td class="item-date-text"><%= order_detail.item.name %></td>
                <td class="item-date-text"><%= order_detail.price %></td>
                <td class="item-date-text"><%= order_detail.amount %></td>
                <td class="item-date-text"><%= order_detail.subtotal %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>
