<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">配送先登録／一覧</h2>
    <div class="col-md-8"></div>
  </div>
</div>


<table class="address-new">
  <thead>
    <tr>
      <th></th>
      <th colspan="2"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model:@address_new, url: public_addresses_path, local:true do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園神園町0-0", :size => "70" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, placeholder: "令和道子" %></td>
        <td><%= f.submit "新規登録", class: "button-green" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<table class="address-list">
  <thead>
    <tr>
      <th width="100", class="address-list-title">郵便番号</th>
      <th width="400", class="address-list-title">住所</th>
      <th width="200", class="address-list-title">宛名</th>
      <th width="200", class="address-list-title"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td class="address-list-text"><%= address.postal_code %></td>
        <td class="address-list-text"><%= address.address %></td>
        <td class="address-list-text"><%= address.name %></td>
        <td class="address-list-text">
          <%= link_to "編集する", edit_public_address_path(address.id), class: "button-green" %>
          <%= link_to "削除する", public_address_path(address.id), method: :delete, class: "button-red" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>