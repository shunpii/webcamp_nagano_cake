<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">配送先登録／一覧</h2>
    <div class="col-md-8"></div>
  </div>
</div>


<table class="address">
  <thead>
    <tr>
      <th></th>
      <th colspan="2"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model:@address_new, url: public_addresses_path, local:true do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園神園町0-0", :size => "70" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, placeholder: "令和道子" %></td>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<table class="address">
  <thead>
    <tr>
      <th width="100">郵便番号</th>
      <th width="400">住所</th>
      <th width="200">宛名</th>
      <th colspan="2", class="200"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_public_address_path(address.id) %></td>
        <td><%= link_to "削除する", public_address_path(address.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>