<h2>配送先登録／一覧</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="2"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model:@address_new, url: public_addresses_path, local:true do |f| %>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園神園町0-0" %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name, placeholder: "令和道子" %></td>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_public_address_path(address.id) %></td>
        <td><%= link_to "削除する", public_address_path(address.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>