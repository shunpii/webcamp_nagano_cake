<p></p>
<h2>マイページ</h2>

<h3>登録情報</h3>
<%= link_to "編集する", edit_public_customer_path(@customer.id) %>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<h3>配送先</h3>
<%= link_to "一覧を見る", public_addresses_path %>

<h3>注文履歴</h3>
<%= link_to "一覧を見る",  public_orders_path %>