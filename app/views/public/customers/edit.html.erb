
　<div class="container">
　  <div class="row">
　    <h2 class="col-md-4">会員情報編集</h2>
　    <div class="col-md-8"></div>
　  </div>
　</div>
  <div class="customer-edit">
    <table>
      <tbody>
        <%= form_with model:@customer, url: public_customers_path, local:true do |f| %>
          <tr>
            <td class="list-title">氏名</td>
            <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td class="list-title">フリガナ</td>
            <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <td class="list-title">郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td class="list-title">住所</td>
            <td><%= f.text_field :address, :size => "70" %></td>
          </tr>
          <tr>
            <td class="list-title">電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td class="list-title">メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
      </tbody>
    </table>
    <div><%= f.submit "編集内容を保存", class: "button-green" %></div>
    <% end %>
    <div class="button-delete">
      <%= button_to "退会する", public_customers_confirm_path, method: :get, class: "button-red" %>
    </div>
  </div>


