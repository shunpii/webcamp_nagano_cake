
<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>商品一覧</h2>
<h3>(全x件)</h3>

<% @items.each do |item| %>
  <div>
    <div>
      <%= link_to public_item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 100,100 %>
      <% end %>
    </div>
    <div><%= item.name %></div>
    <div>¥<%= item.price %></div>
  </div>
<% end %>

