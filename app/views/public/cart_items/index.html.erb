<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">ショッピングカート</h2>
    <div class="col-md-4"></div>
    <div class="col-md-4"><%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete %></div>
  </div>
</div>



<table class="cart_item">
  <thead>
    <tr>
      <th colspan="2", class="item">商品名</th>
      <th class="price">単価（税込）</th>
      <th colspan="2", class="amount">数量</th>
      <th class="subtotal">小計</th>
      <th class="delete"></th>
    </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), method: :patch, local: true do |f| %>
          <td><%= f.number_field :amount ,value: cart_item.amount, :min => 0, :max => 10 %></td>
          <td><%= f.submit "変更" %></td>
          <td><%= cart_item.subtotal %></td>
        <% end %>
        <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
    <% @sum += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>

<div class="container">
  <div class="row">
    <div class="col-md-4"><%= link_to "買い物を続ける", public_items_path %></div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <table>
        <thead>
          <tr>
            <th>合計金額</th>
            <th><%= @sum %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>




<div class="information">
  <%= link_to "情報入力に進む", new_public_order_path %>
</div>
