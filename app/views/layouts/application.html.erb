<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="container">
      <p></p>
      <div class="row">
        <div class="col-md-3"><%= image_tag 'sweets_shortcake.png', size: '150x100' %></div>
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <% if admin_signed_in? %>
              <%= link_to '商品一覧', admin_items_path %>
              <%= link_to '会員一覧', admin_customers_path %>
              <%= link_to '注文履歴一覧', admin_homes_top_path %>
              <%= link_to 'ジャンル一覧', admin_genres_path %>
              <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
            <% else %>
              <%= link_to 'About', public_homes_about_path %>
              <%= link_to '商品一覧', public_items_path %>
              <%= link_to '新規登録', new_admin_registration_path %>
              <%= link_to 'ログイン', new_admin_session_path %>
            <% end %>
|
            <% if customer_signed_in? %>
              <%= link_to "マイページ", public_customer_path(current_customer.id) %>
              <%= link_to '商品一覧', public_items_path %>
              <%= link_to 'カート', public_cart_items_path %>
              <%= link_to 'ログアウト', destroy_customer_session_path(current_customer.id), method: :delete %>
            <% else %>
              <%= link_to 'About', public_homes_about_path %>
              <%= link_to '商品一覧', public_items_path %>
              <%= link_to '新規登録', new_customer_registration_path %>
              <%= link_to 'ログイン', new_customer_session_path %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
