<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">注文履歴一覧</h2>
  </div>

  <div class="row">
    <div class="col-12">
      <table>
        <thead>
          <tr>
            <th class="tp-title">購入日時</th>
            <th class="tp-title">購入者</th>
            <th class="tp-title">注文個数</th>
            <!--<th class="tp-title">注文ステータス</th>-->
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="tp-text"><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
              <td class="tp-text"><%= order.name %></td>
              <td class="tp-text"><%= order.order_details.sum(:amount) %></td>
              <!--<td class="tp-text">
                <%#= order.status %>
              </td>-->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <%= paginate @orders %>
    </div>
  </div>
</div>




