<%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
　<h2><%= customer.first_name %><% customer.last_name %>さんの会員情報編集</h2>
　<div class="field">
　<p>会員ID</p>
    <%= customer.id %>
  </div>
  <div class="field">
    <p>氏名</p>
    <%= f.text_field :customer.first_name %><%= f.text_field :customer.last_name %>
  </div>
  <div class="field">
    <p>フリガナ</p>
    <%= f.text_field :customer.first_name_kana %><%= f.text_field :cuetomer.last_name_kana %>
  </div>
    <div class="field">
    <p>郵便番号</p>
  <%= f.text_field :customer.postal_code %>
  </div>
  <div class="field">
    <p>住所</p>
    <%= f.text_field :customer.address %>
  </div>
  <div class="field">
    <p>電話番号</p>
    <%= f.text_field :customer.telephone_number %>
  </div>
  <div class="field">
    <p>メールアドレス</p>
    <%= f.text_field :customer.email %>
  </div>
  <div class="field">
    <p>会員ステータス</p>
    <%= f.text_field :customer.is_deleted %>
    <%= f.radio_button :is_deleted, :有効 %>
    <%= f.label :有効 %>
    <%= f.radio_button :is_deleted, :退会 %>
    <%= f.label :退会 %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>
