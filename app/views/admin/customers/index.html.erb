<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @customers.each do |customer| %>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, admin_customer_path(@customer) %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
<%= paginate @customers %>