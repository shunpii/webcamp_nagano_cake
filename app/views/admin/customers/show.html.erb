<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
    <div class="col-md-8"></div>
  </div>
</div>
<div class="customer-text">
  <table class="customer">
    <thead>
      <tr>
        <th class="th1"></th>
        <th class="th2"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @customer.is_deleted %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集する", edit_admin_customer_path(@customer), method: :get, class: "bottan-green" %></td>
        <td><%= link_to "注文履歴一覧を見る", admin_order_path, class: "bottan-blue" %></td>
      </tr>
    </tbody>
  </table>
</div>

