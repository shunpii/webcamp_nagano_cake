<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">商品詳細</h2>
    <div class="col-md-8"></div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 200 %>
    </div>
    <div class="col-md-8">
      <table>
        <thead>
          <tr>
            <th width="150"></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格</td>
            <td><%= @item.price %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%if @item.is_active %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <div align="center">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "edit" %>
      </div>
    </div>
  </div>
</div>


