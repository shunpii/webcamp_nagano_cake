<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">商品編集</h2>
    <div class="col-md-8"></div>
  </div>
  <div align="center">
    <%= form_with model:@item, url: admin_item_path, local:true do |f| %>
      <table>
        <thead>
          <tr>
            <th width="200"></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", :size => "30x5" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id]}, {include_blank: '--選択してください--'} %></td>
          </tr>
          <tr>
            <td>税込価格</td>
            <td><%= f.text_field :price, placeholder: "0" %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= f.radio_button :is_active, true %>販売中<%= f.radio_button :is_active, false %>販売停止中</td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= f.submit "変更を保存", class: "update" %>
      </div>
    <% end %>
  </div>
</div>


