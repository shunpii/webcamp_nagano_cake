<p></p>
<div class="container">
  <div class="row">
    <h2 class="col-md-4">商品一覧</h2>
    <div class="col-md-4"></div>
    <div class="col-md-4"><%= link_to "新規登録", new_admin_item_path, class: "new" %></div>
  </div>

  <div align="center">
    <table>
      <thead>
        <tr>
          <th width="100">商品ID</th>
          <th width="200">商品名</th>
          <th width="100">税込価格</th>
          <th width="200">ジャンル</th>
          <th width="100">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>





