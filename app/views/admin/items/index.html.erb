<h1>商品一覧</h1>
  <table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税込価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active %>
            販売中
          <% else %>
            販売停止中
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
